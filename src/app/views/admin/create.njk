{% extends "admin/layout.njk" %}

{% block head %}
    <title>Create</title>
    <link rel="stylesheet" href="/admin/create.css">
{% endblock head %}

{% block content %}
    <form class="recipe" method="POST" action="/admin/recipes">
        <section class="title">
            <h2>Criando receita</h2>

            <button type="submit">Salvar receita</button>
        </section>

        <div class="name">
            <h3>Nome da receita</h3>

            <input type="text" name="title" required>
        </div>

        <div class="image">
            <h3>Imagem da receita</h3>

            <input type="url" name="image" required>
        </div>

        <div class="chef">
            <h3>Chef</h3>
            <select name="chef" required>
                <option value="" disabled selected hidden>Selecione um chef</option>
                {% for chef in chefOptions %}
                    <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected="selected" {% endif %}>{{chef.name}}</option>
                {% endfor %}
            </select>
        </div>

        <div class="_ingredients">
            <h3>Ingredientes</h3>

            <section class="ingredients">
                <section class="ingredient">
                    <input type="text" name="ingredients[]" required/>
                </section>
            </section>

            <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
        </div>

        <div class="_steps">
            <h3>Modo de preparo</h3>

            <section class="steps">
                <section class="step">
                    <input type="text" name="preparation[]" required/>
                </section>
            </section>

            <button type="button" class="add-step">Adicionar novo passo</button>
        </div>

        <div class="information">
            <h3>Informações adicionais</h3>

            <textarea name="information"></textarea>
        </div>
    </form>

    <script src="/admin/create.js"></script>

{% endblock content %}