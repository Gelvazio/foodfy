{% extends "user/layout.njk" %}

{% block head %}
    <title>Users</title>
    <link rel="stylesheet" href="/user/list.css">
{% endblock head %}

{% block content %}

    <div class="container">

        <div class="title">
            <h2>Usu√°rios</h2>

            <a href="/admin/users/register">Novo</a>
        </div>

        <div class="cards">

            {% for user in users %}

                <div class="card">
                    <h3>{{user.name}}</h3>
                    <p>{{user.email}}</p>

                    <div class="buttons">
                        {% if session.userId == user.id or sessionIsAdmin.is_admin == true %}
                            <a class="edit" href="#">Editar</a>
                        {% endif %}

                        {% if sessionIsAdmin.is_admin == true and session.userId != user.id and user.is_admin == false %}
                            <a class="delete" href="#">Remover</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock content %}