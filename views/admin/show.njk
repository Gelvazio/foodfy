{% extends "admin/layout.njk" %}

{% block head %}
    <title>{{recipe.title}}</title>
    <link rel="stylesheet" href="/admin/show.css">
{% endblock head %}

{% block content %}

    <div class="header">
        <h2>Receita: {{recipe.title}}</h2>

        <a href="/admin/recipes/{{recipe.id}}/edit" type="submit">Editar receita</a>
    </div>

    <div class="image">
        <img src="{{recipe.image}}" alt="">
    </div>

    <div class="info">
        <p class="title">{{recipe.title}}</p>
        <p class="author">por {{recipe.author}}</p>
    </div>

    <div class="ingredients">
        <div class="title">
            <p class="title">Ingredientes</p>
        </div>

        <div class="list">
            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}};</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="preparation">
        <div class="title">
            <p class="title">Modo de preparo</p>
        </div>

        <div class="list">
            <ul>
                {% for step in recipe.preparation %}
                    <li>{{step}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="additional-information">
        <div class="title">
            <p class="title">Informações adicionais</p>
        </div>

        <div class="information">
            <p>{{recipe.information}}</p>
        </div>
    </div>
{% endblock content %}